---
// Styles
import '../styles/global.css'

// Components 
import Foot from "../components/Footer.astro"
import Navbar from "../components/NavBar.astro"
import Profile from "../components/Profile-Summary.astro"
import Prose from '../components/Prose.astro';

// Collections query
import { getEntry, render } from 'astro:content';

// Variables
const title = Astro.props.frontmatter?.title ?? "Home";

// Logs
// console.log("Title props:", title)
---

<!DOCTYPE html>
<html lang="en" data-theme="forest">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
</head>
<body>
	<div class="nav">
	<Navbar></Navbar>
	</div>
	
	<div class="profile">
		<Profile />
		<div class="content">
			<Prose>
				<slot/ >
			</Prose>
		</div>
	</div>

</body>
	<Foot></Foot>
</html>

<style>
	body {
	}
	.profile {
	display: grid;
  grid-template-columns: 250px 1fr
	}

	.content {
		display:block;
		justify-self: left;
		margin-top: 5%;
		margin-left: 5%;
	}
</style>